{
  "name" : "Cryptagram",
  "version" : "0.19",
  "description" : "Decrypt Cryptagram photos (http://cryptagr.am).",
  "permissions" : [
    "contextMenus",
    "tabs",
    "http://*/",
    "https://*/"
   ],
   "background" : {
  	"scripts": ["background.js"] },
 	"content_security_policy": "default-src 'self'; img-src 'self' data: chrome: filesystem:",
 	"minimum_chrome_version" : "6.0.0.0",
  "icons": { "16": "icon16.png",
             "48": "icon48.png",
             "128": "icon128.png" },
  "manifest_version": 2,
  "browser_action": {
    "default_icon": "icon19.png",
    "default_popup": "popup.html"
  }
}
